{
  "compilerOptions": {
    "target": "ES2018",
    "module": "nodenext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@components/*": ["./src/client/components/*"],
      "@client/*": ["./src/client/*"],
      "@imgs/*": ["./src/client/imgs/*"]
    }
  },
  "exclude": [
    "test",
    "release",
    "src/main.prod.js",
    "src/renderer.prod.js",
    "src/dist",
    ".erb/dll"
  ]
}
